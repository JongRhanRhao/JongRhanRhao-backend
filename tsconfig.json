{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "types": ["node", "express", "multer"],
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "paths": {
      "@src/*": ["./src/*"],
      "@db/*": ["./db/*"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./*", "./db/**/*", "src/config/db.ts"]
}
